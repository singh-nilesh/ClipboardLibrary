<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clipboardLibrary.Views.NotesPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="tick_icon.svg" />
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout Margin="10" HorizontalOptions="Fill">
        <Entry x:Name="NotesTitel"  Placeholder="Titel" 
               FontSize="Large" HorizontalOptions="Fill" TextColor="Black" BackgroundColor="WhiteSmoke" />

        <Frame HeightRequest="300" HorizontalOptions="Fill">
            <Editor x:Name="NotesBody" Placeholder="Content ......" HorizontalOptions="Fill" VerticalOptions="Fill"
                 TextColor="Black"  BackgroundColor="WhiteSmoke"
                 VerticalTextAlignment="Start" IsSpellCheckEnabled="True" IsTextPredictionEnabled="True"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>